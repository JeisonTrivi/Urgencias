@model IEnumerable<Urgencias.Models.Paciente>

@{
    ViewData["Title"] = "Inicio";
}

<div class="row">
    <div class="col-md-6">
        <a class="btn btn-outline-success" asp-action="Registro"><i class="fa fa-plus-square"></i></a>

        <form  asp-action="getPaciente" class="form-group my-2 my-lg-0">
            <input class="form-control mr-sm-2" id="search" name="search" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>

    </div>
    <div class="col-md-6">
        <h4> Listado de Pacientes</h4>
    </div>

</div>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Atendido)
            </th>
            <th>
                <a class="btn btn-outline-success" asp-action="Registro"><i class="fa fa-plus-square"></i></a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(model => item.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Profesion)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Atendido)
                </td>
                <td>
                    <a asp-action="AddEdit" asp-route-id="@item.idPaciente"><i class="fa fa-marker fa-lg"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.idPaciente" class="text-danger ml-1"
                    onclick="return confirm('¿Está seguro que desea eliminar este registro?')"><i
                        class="fa fa-trash-alt fa-lg"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
